# Database
DATABASE_URL="postgresql://username:password@localhost:5432/church_management"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Email Provider (Mailgun)
MAILGUN_API_KEY="your-mailgun-api-key"
MAILGUN_DOMAIN="your-mailgun-domain"

# WhatsApp Provider (stub)
WHATSAPP_API_URL="https://api.whatsapp.com/send"
WHATSAPP_TOKEN="your-whatsapp-token"

# PIX Provider (simulated)
PIX_PROVIDER_URL="https://api.pix-provider.com"
PIX_PROVIDER_KEY="your-pix-provider-key"

# Feature Flags
FEATURE_PEOPLE_MODULE="true"
FEATURE_ATTENDANCE_MODULE="true"
FEATURE_CALENDAR_MODULE="true"
FEATURE_OFFERINGS_MODULE="true"
FEATURE_GROUPS_MODULE="true"
FEATURE_COMMUNICATION_MODULE="true"

# App Settings
APP_NAME="Sistema de Gestão de Igreja"
APP_VERSION="1.0.0"
DEFAULT_LOCALE="pt-BR"

# File Upload
MAX_FILE_SIZE="5242880" # 5MB
UPLOAD_DIR="./uploads"

# Audit Logs
ENABLE_AUDIT_LOGS="true"

# PWA
PWA_NAME="Igreja App"
PWA_SHORT_NAME="Igreja"
PWA_DESCRIPTION="Sistema de gestão para igrejas"

